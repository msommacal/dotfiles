# Astyle
export ARTISTIC_STYLE_OPTIONS="$HOME/.config/astyle/astylerc"

# Bash (debug mode)
export PS4='${BASH_SOURCE[0]}:$LINENO '

# Docker
export DOCKER_CONFIG="$HOME/.config/docker"

# GDB
export GDBHISTFILE="$HOME/.local/state/gdb/history" && mkdir -p $(dirname $GDBHISTFILE)

# Java
export JAVA_HOME=$(readlink -f /usr/bin/java | sed "s:bin/java::")

# Jupyter
export JUPYTER_CONFIG_DIR="$HOME/.config/jupyter"

# Less
export LESSHISTFILE="$HOME/.local/state/less/history" && mkdir -p $(dirname $LESSHISTFILE) 
export LESSKEY="$HOME/.config/less/keys"
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# Ls
export LS_COLORS=$LS_COLORS:'ow=1;34:'

# Octave
export OCTAVE_HISTFILE="$HOME/.local/state/octave/history" && mkdir -p $(dirname $OCTAVE_HISTFILE) 
export OCTAVE_SITE_INITFILE="~/.config/octave/octaverc"

# Python
export PYTHONHISTFILE="$HOME/.local/state/python/history" && mkdir -p $(dirname $PYTHONHISTFILE)
export PYTHONSTARTUP="$HOME/.config/python/pythonrc"

# Readline
export INPUTRC="$HOME/.config/readline/inputrc"

# Scikit
export SCIKIT_LEARN_DATA="$HOME/.local/share/scikit" && mkdir -p $SCIKIT_LEARN_DATA

# Scripts
export PATH=$PATH:$HOME/.local/bin

# SQLite
export SQLITE_HISTORY="$HOME/.local/state/sqlite/history" && mkdir -p $(dirname $SQLITE_HISTORY) 

# TexLive
export PATH=$PATH:$HOME/
export TEXMFHOME="$HOME/.local/share/texmf" && mkdir -p $TEXMFHOME

# Vi
export EDITOR=/usr/bin/vi

# vim: ft=bash
